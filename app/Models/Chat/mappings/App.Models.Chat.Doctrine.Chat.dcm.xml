<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\Models\Chat\Doctrine\Chat" table="chats">
        <id name="uuid" type="uuid" column="uuid">
            <generator strategy="NONE"/>
        </id>

        <embedded name="name" class="App\Models\Chat\VO\ChatName" use-column-prefix="false"/>

        <field name="createdAt" type="carbondatetime" column="created_at"/>
        <field name="updatedAt" type="carbondatetime" column="updated_at"/>

        <many-to-one field="creator" target-entity="App\Models\User\Doctrine\User" fetch="EAGER">
            <join-column name="user_uuid" referenced-column-name="uuid"/>
        </many-to-one>

        <many-to-many field="users" mapped-by="chats" target-entity="App\Models\User\Doctrine\User"/>

        <one-to-many field="messages" target-entity="App\Models\Message\Doctrine\Message" mapped-by="chat"/>

        <one-to-many field="recordedEvents" target-entity="App\Models\Chat\Events\ChatEvent" mapped-by="entity">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>
    </entity>
</doctrine-mapping>
