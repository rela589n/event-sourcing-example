<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\Models\Chat\Events\ChatEvent" table="chat_events" inheritance-type="SINGLE_TABLE">
        <many-to-one field="entity" target-entity="App\Models\Chat\Doctrine\Chat" inversed-by="recordedEvents">
            <join-column name="chat_uuid" referenced-column-name="uuid"/>
        </many-to-one>

        <discriminator-column name="name" type="string"/>

        <discriminator-map>
            <discriminator-mapping value="chat_created" class="App\Models\Chat\Events\ChatCreated"/>
            <discriminator-mapping value="user_joined_chat" class="App\Models\Chat\Events\UserJoinedChat"/>
            <discriminator-mapping value="user_kicked_out_from_chat" class="App\Models\Chat\Events\UserKickedOutFromChat"/>
            <discriminator-mapping value="user_left_chat" class="App\Models\Chat\Events\UserLeftChat"/>
        </discriminator-map>
    </entity>
</doctrine-mapping>
